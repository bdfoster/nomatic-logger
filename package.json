{
  "name": "nomatic-logger",
  "version": "0.0.4",
  "description": "Seriously awesome logging library built for Node.js",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "test": "cross-env NODE_ENV=test nyc mocha",
    "coveralls": "npm test && nyc report --reporter=text-lcov | coveralls"
  },
  "nyc": {
    "exclude": [
      "node_modules",
      "coverage",
      ".nyc_output",
      ".git",
      "test",
      "dist"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "reporter": [
      "text-summary",
      "lcov",
      "html"
    ],
    "sourceMap": true,
    "instrument": true,
    "all": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bdfoster/nomatic-logger.git"
  },
  "keywords": [
    "logger",
    "logging",
    "typescript",
    "nomatic"
  ],
  "author": "Brian D. Foster <bdfoster89@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bdfoster/nomatic-logger/issues"
  },
  "homepage": "https://github.com/bdfoster/nomatic-logger#readme",
  "devDependencies": {
    "@types/chai": "^3.4.35",
    "@types/mocha": "^2.2.40",
    "chai": "^3.5.0",
    "coveralls": "^2.12.0",
    "cross-env": "^3.2.4",
    "mocha": "^3.2.0",
    "nyc": "^10.1.2",
    "source-map-support": "^0.4.14",
    "ts-node": "^3.0.2",
    "typescript": "^2.2.1"
  },
  "dependencies": {
    "@types/node": "^7.0.11",
    "string-format": "^0.5.0"
  }
}
